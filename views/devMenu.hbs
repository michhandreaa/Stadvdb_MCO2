<html>

<head>
    <head>
    <title> IMDb Movie Record</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script type="text/javascript" src="/js/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.bundle.min.js"></script>
    {{!--
    <script type="text/javascript" src="/js/validator.min.js"></script> --}}
    <script src="/js/handlebars.min.js"></script>
    <script type="text/javascript" src="/js/home.js"></script>
</head>


<body class="col-12 h-100 d-flex flex-column">
    {{> navbar}}
    {{> successModal}}
    {{> failedModal}}
    {{> loadingModal}}
    <div class="rounded-3 m-5 p-5 flex-fill d-flex flex-column justify-content-center">
        <div id="title" class="col-6">
            <p class="h1"><strong>Search</strong></p>
        </div>
        <br>
        {{!-- SEARCH BAR --}}
        <form class="query-search my-3">
            <div class="col-6 px-0">
                Choose which <strong>NODE</strong> to query from.
            </div>
            <div class="btn-group col-3 d-flex position-relative mb-2" role="group">
                <input type="radio" class="btn-check node-btn" name="btnradio" id="btnradio1" value="1" autocomplete="off" checked>
                <label class="btn btn-outline-dark d-flex align-items-center" for="btnradio1">
                    Node 1
                </label>

                <input type="radio" class="btn-check node-btn" name="btnradio" id="btnradio2" value="2" autocomplete="off">
                <label class="btn btn-outline-dark d-flex align-items-center" for="btnradio2">
                    Node 2
                </label>

                <input type="radio" class="btn-check node-btn" name="btnradio" id="btnradio3" value="3" autocomplete="off">
                <label class="btn btn-outline-dark d-flex align-items-center" for="btnradio3">
                    Node 3
                </label>
            </div>

            <br>
            
            <div id="event-notes-help" class="col-6 px-0">
                Enter <strong>SELECT</strong> query here.
            </div>
            
            <div class="form-floating border border-dark justify-content-center" id="query-area">
                <textarea class="form-control" placeholder="Enter the query here..." id="queryholder"
                    style="height: 90px;" name="queryholder">SELECT * FROM movies;</textarea>
                
                <label for="queryholder" class="">Query</label>
            
                <div class="row col-12 m-0 d-flex flex-row">
                    <div class="col-2 pe-2 pt-3 text-end text-danger fw-bolder" id="query-error"></div>
                    <div class="col-12 px-0 pt-2">
                        <button class="btn col-12 border-light border-2" id="search" type="submit"
                            onclick="submitQuerySearch()">
                            Search
                        </button>
                    </div>
                </div>
            </div>
        </form>

        <br>
        <br>
        {{!-- TABLE HEADER --}}
        <div class="col-12 d-flex flex-row">
            <div id="title" class="col-4">
                <p class="h1 fw-bolder text-left">IMDb Movies Record</p>
            </div>

            <div id="movies-num-rows" class="col-5 position-relative">
                <p id="movies-num-rows-p" class="h5 col-12 pb-0 fst-italic text-start position-absolute bottom-0 start-0"></p>
            </div>

        </div>

    <div id="temp">
    </div>
    </div>
</body>

</html>